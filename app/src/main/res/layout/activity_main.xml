<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFECEFF1">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top Bar with Logout -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#DD2196F3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸš— Vehicle Tracking"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Logout"
            android:textSize="12sp"
            android:backgroundTint="#F44336" />

    </LinearLayout>

    <!-- Bottom Panel -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#EEFFFFFF">

        <!-- Vehicle Selector -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle: "
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerVehicle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnManageVehicles"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Manage"
                android:textSize="12sp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Location & Speed Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lat: -, Lng: -"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed: 0 km/h"
                android:textStyle="bold"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Tracking Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btnStartTracking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â–¶ Start Tracking"
                android:backgroundTint="#4CAF50" />

            <Button
                android:id="@+id/btnStopTracking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â¹ Stop"
                android:layout_marginStart="8dp"
                android:backgroundTint="#F44336"
                android:enabled="false" />

        </LinearLayout>

        <!-- Security & Features -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <Button
                android:id="@+id/btnArmSecurity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ”“ Arm Security"
                android:backgroundTint="#FF9800" />

            <Button
                android:id="@+id/btnTripHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“ Trip History"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Fleet Dashboard -->
        <Button
            android:id="@+id/btnFleetDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Fleet Dashboard"
            android:layout_marginTop="4dp"
            android:backgroundTint="#9C27B0" />

        <!-- Tip -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Tip: Long press on map to set a geofence (200m radius)"
            android:textSize="11sp"
            android:textColor="#757575"
            android:paddingTop="8dp" />

    </LinearLayout>

</RelativeLayout>
